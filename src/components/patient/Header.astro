---
const { title } = Astro.props;
---

<div
    class="flex flex-col md:flex-row items-center justify-between bg-green-500 text-white p-4"
>
    <div class="flex items-center mb-4 md:mb-0">
        <a href="/patient/dashboard" class="text-blue-500">
            <img src="/medical-team.png" alt="Logo" class="h-8 mr-4" />
        </a>
        <h1 class="text-2xl font-bold">{title}</h1>
    </div>
    <div class="flex items-center">
        <a href="/patient/appointments/create" class="mr-4 md:mr-8"
            >Create Appointment</a
        >
        <form action="/api/auth/signout" class="inline">
            <button type="submit" class="font-bold py-2 px-4 rounded"
                >Sign out</button
            >
        </form>
    </div>
</div>
